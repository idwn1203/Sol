<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>

<BorderPane prefHeight="82.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <center>
      <GridPane hgap="10.0" vgap="10.0">
         <children>
            <Label prefWidth="50" text="과목" />
            <Label prefWidth="50" text="목표시간" GridPane.rowIndex="1" />
            <TextField id="txtName" prefWidth="100" GridPane.columnIndex="1" />
            <TextField id="txtGoal" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0">
         <BorderPane.margin>
            <Insets bottom="10" top="20.0" />
         </BorderPane.margin>      
         <children>
            <Button id="btnFormAdd" text="저장" />
            <Button id="btnFormCancel" text="취소" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
